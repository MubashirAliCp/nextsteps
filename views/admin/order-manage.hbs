			$("#statusForm").submit((e) => {
        
				e.preventDefault()
				$.ajax({
					url: '/admin/changeOrderStatus',
					method: 'post',
					data: $('#statusForm').serialize(),
					success: (Response) => {
                        
						if (Response.modified) {
							location.reload()
						} else {
							alert('not changed')
						}
					}

				})
			})

</script>







