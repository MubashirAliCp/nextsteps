              <p class="small text-muted mb-0">Receipt Voucher : {{order._id}}</p>
            </div>

            {{#each products}}
            <div class="card shadow-0 border mb-4">
              <div class="card-body">
                <div class="row">
                  <div class="col-md-2">
                   <img src="data:{{this.products.image.0.contentType}};base64,{{this.products.image.0.imageBase64}}" alt=""
