                {{!-- <hr class="mb-4" style="background-color: #e0e0e0; opacity: 0;"> --}}
                <div class="row d-flex align-items-center">
                  
                </div>
              </div>
            </div>

            {{/each}}
            

            <div class="d-flex justify-content-between pt-2 font-weight-bold">

              <p class="fw-bold mb-0"><span style="color:#000000;">Order Details</span></p>
              <p class="text-muted mb-0"><span class="fw-bold me-4">Subtotal</span> ₹ {{order.totalAmount}}</p>
            </div>

            {{!-- <div class="d-flex justify-content-between pt-2">
