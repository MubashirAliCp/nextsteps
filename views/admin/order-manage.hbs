                  {{#if this.orderCancelled}}

                {{else}}
                    {{!-- <button class="btn btn-danger cancel-order" style="width: 120px; font-size: small ;" onclick="cancelOrder('{{../order._id}}','{{this.products._id}}','{{this.products.price}}','{{../order.totalAmount}}','{{../order.CouponPercentage}}','{{../order.reFund}}','{{this.quantity}}')">Cancel Order</button> --}}
                     <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
